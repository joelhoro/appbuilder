<Window x:Class="AppRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:AppRunner.Controls"
        Title="MainWindow" Height="708" Width="1000">
    <DockPanel HorizontalAlignment="Left" Margin="0,0,0,0.4" >
        <Menu DockPanel.Dock="Top">
        <MenuItem Header="_Settings">
            <MenuItem Header="_Restore" Click="MenuItemClick" Tag="Restore"/>
            <MenuItem Header="_Save" Click="MenuItemClick" Tag="Save"/>
            <Separator/>
            <MenuItem Header="_Edit settings" Click="MenuItemClick" Tag="Edit"/>
        </MenuItem>
        </Menu>
        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <controls:ApplicationListControl x:Name="AppListControl" HorizontalAlignment="Left" ></controls:ApplicationListControl>
            <TextBox x:Name="t" Text="waiting"></TextBox>
            <StackPanel Orientation="Horizontal">
                <controls:LogFileControl x:Name="LogFileControl" HorizontalAlignment="Left" Height="410" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>

<UserControl x:Class="AppRunner.Controls.ApplicationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal"  Grid.ColumnSpan="2">
            <!--<Label Content="Executable" FontSize="14"></Label>-->
            <ComboBox ItemsSource="{Binding WorkSpaceChoices}" Text="{Binding WorkSpace}" Width="150" HorizontalAlignment="Left" Margin="0,0,10,0" IsSynchronizedWithCurrentItem="False"/>
            <ComboBox ItemsSource="{Binding ExecutableChoices}" Text="{Binding Executable}" Width="150" HorizontalAlignment="Left" IsEditable="True" Margin="0,0,10,0" IsSynchronizedWithCurrentItem="False"/>
            <!--<Label Content="Args" FontSize="14" Margin="3,0" />-->
            <TextBox Text="{Binding CommandLineArgs}" Width="286"/>
            <!--<Button Content="Run!" Height="30" VerticalAlignment="Top" Width="85" Click="Button_Click" BorderThickness="1" HorizontalAlignment="Right" Margin="10,0,0,0" HorizontalContentAlignment="Center">-->
                <!--<Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>-->
        </StackPanel>
    </Grid>
</UserControl>

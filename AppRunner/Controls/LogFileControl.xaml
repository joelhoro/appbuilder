<UserControl x:Class="AppRunner.Controls.LogFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" Width="400">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="587*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" >
            <Label Content="{Binding LogFileName}" FontWeight="Bold" FontSize="14" />
            <TextBox Name="TextBox1" Text="{Binding FileContent}" TextWrapping="Wrap" AcceptsReturn="True"  ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="7,0,10.333,0" Height="479" FontFamily="Consolas" />
        </StackPanel>
    </Grid>
</UserControl>
